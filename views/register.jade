extend layout 

block content
	.container
		h1 Register Page
		p.lead Say something here
		br
		form#register-form(role="form", action="/register", method="post")
			.form-group
				input.form-control(type="text", name="username", placeholder="Enter A Username")
			.form-group
				input.form-control(type="password", name="password", placeholder="Enter A Password")
			button.btn.btn-primary(type="submit") Submit
			a(href="/")
				button.btn.btn-primary(type="button") Cancel